{
   "compilerOptions": {
      "lib": ["dom", "ES2020", "dom.iterable"],
      "target": "ES2020",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./dist",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "paths": {
         "*": [
             "node_modules/*",
             "src/*"
         ]
      },
      "baseUrl": ".",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true
   },
   "include": [
      "src/**/*"
  ]
 }